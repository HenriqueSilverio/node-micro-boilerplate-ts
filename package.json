{
  "name": "node-micro-boilerplate-ts",
  "version": "1.0.0",
  "description": "Minimal starter files to create a NodeJS app.",
  "engines": {
    "node": "^18.13",
    "npm": "^8.19"
  },
  "main": "src/index.ts",
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.build.json",
    "start": "npm run build && node --require dotenv/config dist/index.js",
    "start:dev": "ts-node-dev --require dotenv/config src/index.ts",
    "test": "jest",
    "prepare": "[ ${CI} ] || husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/HenriqueSilverio/node-micro-boilerplate-ts.git"
  },
  "author": "Henrique Silv√©rio",
  "license": "GPL-3.0",
  "dependencies": {
    "require-env": "^0.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.3",
    "@tsconfig/node18": "^2.0.1",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.16.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.55.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.38.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.2",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  }
}

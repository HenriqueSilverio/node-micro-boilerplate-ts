{
  "name": "node-micro-boilerplate-ts",
  "version": "1.0.0",
  "description": "Minimal starter files to create a NodeJS app.",
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "main": "src/index.ts",
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.build.json",
    "start": "npm run build && node --env-file=.env dist/index.js",
    "start:dev": "tsx watch --env-file=.env src/index.ts",
    "test": "jest",
    "prepare": "[ ${CI} ] || husky"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/HenriqueSilverio/node-micro-boilerplate-ts.git"
  },
  "author": "Henrique Silv√©rio",
  "license": "GPL-3.0",
  "dependencies": {
    "require-env": "^0.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@tsconfig/node22": "^22.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.4",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.10.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.4.3",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "~5.7.3"
  }
}

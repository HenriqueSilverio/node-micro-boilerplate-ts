{
  "name": "node-micro-boilerplate-ts",
  "version": "1.0.0",
  "description": "Minimal starter files to create a NodeJS app.",
  "engines": {
    "node": "^16.13.1",
    "npm": "^8.2.0"
  },
  "main": "src/index.ts",
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.build.json",
    "start": "node dist/index.js",
    "start:dev": "ts-node-dev --require dotenv/config src/index.ts",
    "test": "jest",
    "prepare": "[ ${CI} ] || husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/HenriqueSilverio/node-micro-boilerplate-ts.git"
  },
  "author": "Henrique Silv√©rio",
  "license": "GPL-3.0",
  "dependencies": {
    "require-env": "^0.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@tsconfig/node16": "^1.0.2",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.17",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.11.0",
    "dotenv": "^16.0.0",
    "eslint": "^8.8.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-plugin-import": "^2.25.4",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.4",
    "ts-jest": "^27.1.3",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.5"
  }

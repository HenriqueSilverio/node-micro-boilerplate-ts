{
  "name": "node-micro-boilerplate-ts",
  "version": "1.0.0",
  "description": "Minimal starter files to create a NodeJS app.",
  "engines": {
    "node": "^16.13.1",
    "npm": "^8.2.0"
  },
  "main": "src/index.ts",
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.build.json",
    "start": "npm run build && node --require dotenv/config dist/index.js",
    "start:dev": "ts-node-dev --require dotenv/config src/index.ts",
    "test": "jest",
    "prepare": "[ ${CI} ] || husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/HenriqueSilverio/node-micro-boilerplate-ts.git"
  },
  "author": "Henrique Silv√©rio",
  "license": "GPL-3.0",
  "dependencies": {
    "require-env": "^0.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@tsconfig/node16": "^1.0.3",
    "@types/jest": "^28.1.7",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.28.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.5",
    "husky": "^8.0.2",
    "jest": "^28.1.3",
    "lint-staged": "^13.0.4",
    "ts-jest": "^28.0.8",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.3"
  }
}
